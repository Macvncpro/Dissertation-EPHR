<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ephr.LoginController"
      alignment="CENTER" spacing="15" prefWidth="400" prefHeight="300">
    <Label text="Login to EPHR System" style="-fx-font-size: 20px;"/>
    <TextField fx:id="usernameField" promptText="Username" prefWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="250"/>
    <Button text="Login" onAction="#handleLogin"/>
    <Button text="Register" onAction="#handleRegister"/>
    <Label fx:id="errorLabel" textFill="red"/>
</VBox>