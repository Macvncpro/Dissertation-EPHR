<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/javafx"
          fx:controller="com.ephr.LoginController"
          alignment="CENTER" hgap="10" vgap="10"
          prefWidth="400" prefHeight="300">
    <Label text="Username:"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="1"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label fx:id="errorLabel" style="-fx-text-fill: red;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button text="Login" onAction="#login" GridPane.columnIndex="1" GridPane.rowIndex="3" 
            style="-fx-background-color: #2a9df4; -fx-text-fill: white;"/>
</GridPane>